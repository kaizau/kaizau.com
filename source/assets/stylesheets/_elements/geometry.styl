.Geometry
  _size = 240px

  .outer
    animation: rotate-cube 20s linear infinite
    height: _size
    margin: space.xl auto
    perspective: 18000px
    transform-style: preserve-3d;
    width: _size

  .face
    background: alpha(orange, .05)
    border: 2px solid alpha(orange, .15)
    height: _size
    width: _size
    position: absolute
    transition: all 1s

  .front
    transform: rotateY(0deg) translateZ(_size * .5) rotateZ(0deg)
  .back
    transform: rotateX(180deg) translateZ(_size * .5) rotateZ(0deg)
  .right
    transform: rotateY(90deg) translateZ(_size * .5) rotateZ(0deg)
  .left
    transform: rotateY(-90deg) translateZ(_size * .5) rotateZ(0deg)
  .top
    transform: rotateX(90deg) translateZ(_size * .5) rotateZ(0deg)
  .bottom
    transform: rotateX(-90deg) translateZ(_size * .5) rotateZ(0deg)

  .inner
    .face
      //animation: glow-red 10s linear infinite
      background: alpha(orange, .1)
      border: 2px solid alpha(orange, .15)
      height: _size * .4
      left: _size * .3
      position: absolute
      top: _size * .3
      width: _size * .4

    .front
      transform: rotateY(0deg) translateZ(_size * .2)
    .back
      transform: rotateX(180deg) translateZ(_size * .2)
    .right
      transform: rotateY(90deg) translateZ(_size * .2)
    .left
      transform: rotateY(-90deg) translateZ(_size * .2)
    .top
      transform: rotateX(90deg) translateZ(_size * .2)
    .bottom
      transform: rotateX(-90deg) translateZ(_size * .2)

  .outer:hover >
    .front
      transform: rotateY(0deg) translateZ(_size * .75) rotateZ(135deg)
    .back
      transform: rotateX(180deg) translateZ(_size * .75) rotateZ(135deg)
    .right
      transform: rotateY(90deg) translateZ(_size * .75) rotateZ(135deg)
    .left
      transform: rotateY(-90deg) translateZ(_size * .75) rotateZ(135deg)
    .top
      transform: rotateX(90deg) translateZ(_size * .75) rotateZ(135deg)
    .bottom
      transform: rotateX(-90deg) translateZ(_size * .75) rotateZ(135deg)

@keyframes rotate-cube
  0%
    transform: rotateY(-30deg) rotateX(0deg) rotateZ(20deg)
  100%
    transform: rotateY(-30deg) rotateX(360deg) rotateZ(20deg)

