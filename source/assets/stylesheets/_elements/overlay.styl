// Overlay for displaying images
.Overlay
  background: gray.void
  background: rgba(0,0,0,.75)
  bottom: 0
  display: none
  left: 0
  overflow: scroll
  position: fixed
  right: 0
  top: 0
  z-index: 1000

  &.active
    display: block

  // Close button
  &:before
    _size = 60px

    color: gray.white
    content: '\00D7'
    cursor: pointer
    display: block
    font-size: _size
    font-weight: 100
    line-height: _size
    opacity: .5
    position: absolute
    right: space.md
    text-align: center
    top: space.md
    width: _size
    z-index: 2000

  .table, .cell
    display: table
    height: 100%
    width: 100%

  .cell
    display: table-cell
    position: relative
    text-align: center
    vertical-align: middle

    // Loader
    &:before
      _size = 40px

      animation: loader 2s linear infinite
      background: rgba(255,255,255,.5)
      content: ''
      display: block
      height: _size
      left: 50%
      margin-left: _size * -.5
      margin-top: _size * -.5
      opacity: 1
      position: absolute
      transition: opacity .2
      top: 250px
      width: _size
      z-index: 1001

  .cell.loaded:before
    opacity: 0

  img
    margin: 100px 0 space.md
    max-width: 1000px
    opacity: 0
    transition: opacity .2s
    position: relative
    width: 90%
    z-index: 1002

    +above(viewport.md)
      width: 80%

    +above(viewport.lg)
      margin: space.md 0
      width: 70%

    +above(viewport.xl)
      width: 60%

  .loaded img
    opacity: 1

  &.mobile img
    max-width: 400px

@keyframes loader
  0%
    transform: rotateY(0deg) rotateX(20deg) rotateZ(0deg)
  100%
    transform: rotateY(360deg) rotateX(20deg) rotateZ(360deg)
