.Panels
  margin: space.xl auto
  transform: translate3d(0,0,0)

  ul
    clearfix()
    naked-list()

  li
    background: gray.fog
    position: relative
    font-size: 0
    line-height: 0
    margin-top: space.md
    overflow: hidden

    &:first-child
      margin-top: 0

  img
    backface-visibility: hidden
    opacity: .9
    transition: all .2s
    transform: scale(1)
    z-index: 1

  a:hover img
    opacity: 1
    transform: scale(1.01)

  .text
    background: rgba(0,0,0,.5)
    background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.85))
    bottom: 0
    color: gray.white
    left: 0
    font-size: font.md
    line-height: space.line
    padding-top: space.xl
    position: absolute
    width: 100%
    z-index: 10

    @extend .with-padding

  h2, h3
    margin: 0
    padding: 0

  h3
    margin-top: space.xs

  +above(viewport.md)
    ul
      display: flex
      flex-wrap: wrap
      margin-left: -2%
      margin-top: (0 - space.md)

    li
      margin-left: 2%
      margin-top: space.md
      width: 48%

      &:first-child
        margin-top: space.md
