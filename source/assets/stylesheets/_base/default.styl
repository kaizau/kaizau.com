//
// Global
// ----------------------------------------------------------------------------

*
  box-sizing: border-box

html,
button,
input,
select,
textarea
  color: color.text

html
  font: 300 font.md / space.line font.ff

::-moz-selection
  background: color.selection
  color: black
  text-shadow: none

::selection
  background: color.selection
  color: black
  text-shadow: none

//
// Common Tags
// ----------------------------------------------------------------------------

heading-properties(size, ratio = 1.5)
  font-size: size
  line-height: ceil(size * ratio)
  total-height = ceil(@line-height / space.line) * space.line
  total-height = total-height + space.line if (@line-height % space.line)
  padding-top: (total-height - @line-height)

h1, h2, h3, h4
  font: 300 font.xl / 1 font.ff

h1
  heading-properties(font.xl)
h2
  heading-properties(font.xl)
h3
  heading-properties(font.lg)
h4
  heading-properties(font.md)
  font-weight: bold

+above(viewport.xs)
  h1
    heading-properties(font.xxl)

a
  color: color.anchor
  text-decoration: none
  &:hover
    color: lighten(color.anchor, 10%)
  p &:hover
    text-decoration: underline

ol,
ul
  padding: 0 0 0 space.md

textarea
  resize: vertical

audio,
canvas,
embed,
img,
object,
progress,
video
  max-width: 100%
