//
// Portfolio
//

.PortfolioItem
  border-top: 1px solid gray.rain
  clear: both
  padding: space.line 0 (space.line * 2)
  overflow: hidden

  &:first-child
    border-top: 0

  .asterisk
    color: orange

  .rebrand
    color: gray.silver
    font-size: font.sm
    font-style: italic

  ul
    clearfix()
    naked-list()
    color: gray.steel
    font-size: font.sm

  li
    &:before
      content: "+"
      margin-right: 3px

    +between(viewport.xs, viewport.lg)
      float: left
      margin-right: space.sm

  .image
    background: gray.fog
    margin-top: space.line
    overflow: hidden
    position: relative
    transform: translate3d(0,0,0)

    a
      display: block
      font-size: 0
      line-height: 0

    img
      backface-visibility: hidden
      opacity: .9
      transform: scale(1)
      transition: all .2s

  .caption
    background: gray.void
    background: rgba(0,0,0,.75)
    bottom: 0
    color: gray.white
    font: normal font.sm/space.line font.helvetica
    left: 0
    opacity: 0
    position: absolute
    text-align: center
    transition: opacity .2s
    width: 100%

  .image a:hover
    img
      opacity: 1
      transform: scale(1.01)

    .caption
      opacity: 1

  .testimonial
    background: ink
    color: gray.white
    font-size: font.lg + 2px
    font-style: italic
    line-height: 1.5
    padding: space.sm

    blockquote
      margin: 0 0 space.sm

    cite
      font-size: font.sm
      font-style: normal
      display: block
      text-align: right

  //
  // Portfolio Layout
  //

  // Break image groups into 2 cols
  +above(viewport.sm)
    .image-group
      display: flex
      justify-content: space-between

      .image
        width: 48%

  // Separate text and image cols
  +above(viewport.lg)
    display: flex

    .text
      flex: 3
      margin-right: space.lg

    .images
      flex: 7
